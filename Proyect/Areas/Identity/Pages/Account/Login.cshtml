@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
  <div id="formulario" class="container py-5 h-100" style="margin-top: 20px;" >
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-xl-9">
        <div class="card" style="border-radius: 1rem;">
          <div class="row g-0">
            <div  class="col-md-10 col-lg-5 d-none d-md-block">
              <img
                src="https://images.unsplash.com/photo-1515150144380-bca9f1650ed9?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=387&q=80"
                alt="login form"
                class="img-fluid" style="border-radius: 10px"
                height="900px"
              />
            </div>
            <div class="col-md-10 col-lg-7 d-flex align-items-center">
              <div class="card-body p-5 p-lg-4 text-black">

                <form id="account" method="post">

                  <div class="d-flex align-items-center mb-1 pb-1" >
                    
                    <span id="titulo" class="h1 fw-bold mb-0" style="font-family: 'Montserrat', sans-serif;">Salvando Gotas</span>
                  </div>

                  

                  <div class="form-floating" style="margin-bottom: 20px;">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating" style="margin-bottom: 20px;">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                  <div>
                    <div class="form-check form-switch">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                    <button style="margin-bottom: 20px;" id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Iniciar Sesion</button>
                </div>
                <div>
                    <p>
                        <a style=" text-decoration: none;" class="text-primary" id="forgot-password" asp-page="./ForgotPassword">Olvidaste tu contraseña?</a>
                    </p>
                    <p>
                        <a style=" text-decoration: none;" class="text-primary" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrarse</a>
                    </p>
                </div>
                </form>
                
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
